/* info.wxss */

.container {
  padding: 55rpx 30rpx 35rpx;
}

.top-bar {
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  font-size: .6rem;
  color: #ffffff;
  background: #1976d2;
  padding: 10px 0;
  text-align: center;
  z-index: 999;
}

.app-info {
  padding: 75rpx 0 50rpx;
  display: flex;
  align-items: center;
  width: 100%;
}

.row {
  display: flex;
  width: 100%;
}

.row > .col {
  flex-grow: 1;
  width: 50%;
  display: flex;
  justify-content: left;
  align-content: center;
}

.row > .col:first-child {
  border-right: 1px solid #ddd;
  margin-right: 25rpx;
}

.app-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  overflow: hidden;
  margin-right: 15rpx;
}

.app-title {
  font-size: 1rem;
  font-weight: bold;
  line-height: 72rpx;
}

.app-add {
  text-align: center;
  line-height: 72rpx;
  font-weight: bold;
  font-size: 1.2rem;
  border-radius: 12rpx;
  background: #ddd;
  opacity: .6;
}

.app-del{
  flex-grow: 1;
  align-self: top;
  text-align: right;
  font-weight: bold;
  font-size: 0.9rem;
}

.applist-title {
  width: 100%;
  text-align: left;
  font-size: .8rem;
  opacity: .6;
  line-height: 1.75;
}

.applist-line{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: left;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #efefef;
  line-height: 1.75;
}
.applist-half-content {
  width: 50%;
  text-align: left;
  font-weight: bold;
  font-size: .8rem;
}

.applist-full-content {
  width: 100%;
  text-align: left;
  font-weight: bold;
  font-size: .8rem;
  padding-bottom: 40rpx;
  margin-bottom: 40rpx;
  border-bottom: 1px solid #efefef;
  line-height: 1.75;
}

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
 
.commodity_attr_box {
  height: 80%;
  width: 80%;
  overflow: hidden;
  position: fixed;
  top: 10%;
  left: 10%;
  z-index: 2000;
  background: #fff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
}
.applist-item{
  display: flex;
  justify-content: left;
  align-content: center;
  border-bottom: 1px solid #ddd;
  padding-top: 24rpx; 
  padding-bottom: 24rpx;
}
.applist-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-left: 17rpx;
  margin-right: 17rpx;
}

.applist-name {
  font-size: 1rem;
  line-height: 90rpx;
}
.no-scroll {
  top:0px;
  left: 0px;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}